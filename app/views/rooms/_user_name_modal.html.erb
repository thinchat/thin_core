<div class="modal hide" id="userModal">
  <div class="modal-header">
    <h3>Would You Like to Provide a Display Name?</h3>
  </div>
  <div class="modal-body">
    </br>
      <%= form_for current_user, :html => { :class => "form-inline"}, :remote => true do |f| %>
        <%= f.label :display_name %>
        <%= f.text_field :name, :placeholder => "Display name" %>
        <%= hidden_field_tag 'room_id', @room.id %>
        </br>
        <%= f.label :email_address %>
        <%= f.text_field :email, :placeholder => "Email Address" %>
        </br>
        </br>
        <%= f.submit "Submit", :class => "btn btn-primary", :id => "user_info_update"  %>

      <a href="#" class="btn" data-dismiss="modal">No Thanks</a>
      <% end %>
  </div>
</div>